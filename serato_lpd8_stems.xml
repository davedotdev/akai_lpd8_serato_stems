                </translation>
            </codfather_gain>
        </userio>
    </control>

    <!-- ============================================== -->
    <!-- PADS 1-4 (Bottom Row): Stem FX Toggle          -->
    <!-- ============================================== -->

    <!-- Pad 1 - Vocals FX (Slot 0) -->
    <control channel="10" event_type="Note On" control="36">
        <userio event="click">
            <codfather_fx deck_set="Default" deck_id="0" slot_id="0">
                <translation action_on="press" behaviour="toggle"/>
            </codfather_fx>
        </userio>
        <userio event="output">
            <codfather_fx deck_set="Default" deck_id="0" slot_id="0">
                <translation action_on="any">
                    <alias name="on" value="127"/>
                    <alias name="off" value="0"/>
                </translation>
            </codfather_fx>
        </userio>
    </control>

