<midi app="Serato DJ Pro 4.0.2.338">
    <!-- ============================================== -->
    <!-- Akai LPD8 - Deck 1 Stem Control Mapping        -->
    <!-- Knobs: Stem Volume | Pads 1-4: On/Off | 5-8: FX -->
    <!-- ============================================== -->

    <!-- KNOBS 1-4: Stem Volume/Gain (Channel 1, CC 70-73) -->

    <!-- Knob 1 - Vocals Gain (Slot 0) - CC 70 -->
    <control channel="1" event_type="Control Change" data_type="Absolute 7" control="70">
        <userio event="click">
            <codfather_gain deck_set="Default" deck_id="0" slot_id="0">
                <translation action_on="any" behaviour="explicit">
                    <range in_min="0" in_max="127" out_min="0" out_max="64"/>
                </translation>
            </codfather_gain>
        </userio>
    </control>

    <!-- Knob 2 - Drums Gain (Slot 1) - CC 71 -->
    <control channel="1" event_type="Control Change" data_type="Absolute 7" control="71">
        <userio event="click">
            <codfather_gain deck_set="Default" deck_id="0" slot_id="1">
                <translation action_on="any" behaviour="explicit">
                    <range in_min="0" in_max="127" out_min="0" out_max="64"/>
                </translation>
            </codfather_gain>
        </userio>
    </control>

    <!-- Knob 3 - Bass Gain (Slot 2) - CC 72 -->
    <control channel="1" event_type="Control Change" data_type="Absolute 7" control="72">
